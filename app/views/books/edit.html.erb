<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="text_field">
    <label>title</label>
    <%= f.text_field :title %>
  </div>

  <div class="text_field">
    <label>body</label>
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

